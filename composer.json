{
    "name": "nikolaposa/monolog-factory",
    "description": "Factories that facilitate creation of Monolog logger objects",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "monolog",
        "factory"
    ],
    "authors": [
        {
            "name": "Nikola Po≈°a",
            "email": "posa.nikola@gmail.com",
            "homepage": "http://www.nikolaposa.in.rs/"
        }
    ],
    "require": {
        "php": "^7.0",
        "monolog/monolog": "^1.0",
        "container-interop/container-interop": "^1.0",
        "nikolaposa/cascader": "^1.0@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^6.0",
        "friendsofphp/php-cs-fixer": "^2.0",
        "sentry/sentry": "^1.7"
    },
    "autoload": {
        "psr-4": {
            "MonologFactory\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MonologFactory\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "cs-fix": "php-cs-fixer fix --config=.php_cs",
        "cs-check": "php-cs-fixer fix --config=.php_cs -v --diff --dry-run"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
